# MCP Server Configuration
HOST=0.0.0.0
PORT=3000

# Encryption key for API key generation and decryption
# IMPORTANT: Must be a valid Fernet key (32 url-safe base64-encoded bytes)
# Generate one with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# If not set, a new random key will be generated on each server startup
# WARNING: Changing this key will invalidate all existing API keys
# RECOMMENDATION: Set this to a persistent value if deploying to multiple instances
ENCRYPTION_KEY=

# Connection pool configuration
CONNECTION_POOL_TTL_MINUTES=60

# Logging level
LOG_LEVEL=INFO
